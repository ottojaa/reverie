# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/reverie

# Redis
REDIS_URL=redis://localhost:6379

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_ROOT=/mnt/nas/reverie

# S3 (optional, if STORAGE_PROVIDER=s3)
STORAGE_S3_BUCKET=reverie
STORAGE_S3_ENDPOINT=http://localhost:9000
STORAGE_S3_ACCESS_KEY=minioadmin
STORAGE_S3_SECRET_KEY=minioadmin

# OpenAI / LLM
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# Server
PORT=3000
HOST=0.0.0.0

# CORS (HTTP API, comma-separated origins)
CORS_ORIGIN=http://localhost:5173

# WebSocket
WS_ENABLED=true
WS_CORS_ORIGIN=http://localhost:5173

# Job Queue
JOB_CONCURRENCY_OCR=2
JOB_CONCURRENCY_THUMBNAIL=4
JOB_CONCURRENCY_LLM=1
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_BACKOFF_MS=5000

# LLM Processing
LLM_ENABLED=true
LLM_MAX_INPUT_CHARS=50000
LLM_SNIPPET_SIZE=5000
LLM_PROCESS_CODE_FILES=false
LLM_MIN_OCR_CONFIDENCE=30

# LLM Vision (optional - for images without text)
LLM_VISION_ENABLED=false
LLM_VISION_MODEL=gpt-4o

# JWT Authentication
JWT_SECRET=your-secret-key-here-at-least-32-characters-long
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
