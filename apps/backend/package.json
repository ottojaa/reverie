{
  "name": "@reverie/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/backend/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/backend/src/main.ts",
          "tsConfig": "apps/backend/tsconfig.app.json",
          "skipTypeCheck": true,
          "assets": [
            "apps/backend/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/backend/dist/package.json",
          "{workspaceRoot}/apps/backend/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/backend/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@reverie/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@reverie/backend:build:development"
          },
          "production": {
            "buildTarget": "@reverie/backend:build:production"
          }
        }
      },
      "migrate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsx apps/backend/src/db/migrate.ts"
        }
      },
      "migrate:down": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsx apps/backend/src/db/migrate.ts down"
        }
      },
      "worker:ocr": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsx apps/backend/src/workers/ocr.worker.ts"
        }
      },
      "worker:thumbnail": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsx apps/backend/src/workers/thumbnail.worker.ts"
        }
      },
      "worker:llm": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsx apps/backend/src/workers/llm.worker.ts"
        }
      },
      "worker:all": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsx apps/backend/src/workers/index.ts"
        }
      }
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@fastify/autoload": "~6.0.3",
    "@fastify/multipart": "^9.0.1",
    "@fastify/sensible": "~6.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@fastify/websocket": "^11.2.0",
    "@reverie/shared": "workspace:*",
    "blurhash": "^2.0.5",
    "bullmq": "^5.66.6",
    "dotenv": "^16.4.7",
    "fastify": "~5.2.1",
    "fastify-plugin": "~5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "ioredis": "^5.9.2",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "20.19.9",
    "@types/pg": "^8.11.10"
  }
}
