{
    "name": "@reverie/web",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:4200 && tsc -p electron/tsconfig.json && NODE_ENV=development electron .\"",
        "build": "vite build",
        "build:electron": "vite build && tsc -p electron/tsconfig.json",
        "electron": "electron .",
        "preview": "vite preview",
        "package": "electron-builder build --mac --win --linux",
        "package:mac": "electron-builder build --mac",
        "package:win": "electron-builder build --win",
        "package:linux": "electron-builder build --linux"
    },
    "build": {
        "appId": "com.reverie.app",
        "productName": "Reverie",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Office"
        }
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "prettier-eslint": "^16.4.2",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.2.4",
        "@reverie/shared": "workspace:*",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.562.0",
        "motion": "^12.29.2",
        "react-dropzone": "^14.4.0",
        "socket.io-client": "^4.8.3",
        "tailwind-merge": "^3.4.0"
    }
}
